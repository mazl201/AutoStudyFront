extends layout



block content
    - var spdSelect = {"正常":"3","慢":"1","稍慢":"2","快":"4","加快":"5"}
    - var speechSpdSelect = {"正常":"1","慢":"0.8","稍慢":"0.9","快":"1.1","加快":"1.2"}
    - var perSelect = {"女声":"0","男声":"1","度逍遥":"3","度丫丫":"4"}

    div(class="modal fade bs-example-modal-lg" id="myModal" tabitem="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
        div(class="modal-dialog modal-lg")
            div(class="modal-content")
                div(class="modal-header")
                    button(type="button" class="btn btn-default" id="modalContentStart") 开始
                    select.selectpicker(id="speechModalSpdId")
                        each name,key in speechSpdSelect
                            option(value="#{name}") #{key}
                    button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times
                    p(class="modal-title" id="myModalLabel") 实时
                div(class="modal-body" id="contentDiv" style="overflow:auto; height: 100%; width: 100%; border: 1px solid #999;background:#49998D;" ondblclick="pauseOrPlay()")

                div(class="modal-footer")
                    button(type="button" class="btn btn-default" data-dismiss="modal") 关闭
                    p(id="modalHideContent"  hidden)
    button(class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal") 大声读出来

    h1= title
    p now you use #{title}
    select.selectpicker(class="myselectionspd")
        each name,key in spdSelect
            option(value="#{name}") #{key}

    select.selectpicker(class="myselectionper")
        each name,key in perSelect
            option(value="#{name}") #{key}
    br

    textarea(style="width:800px;height:400px;" class="upload-content")
    br
    a(href="javascript:void(0)" class='btn submitButton') 提交
    br
    a(href="javascript:void(0)" class='btn translateButton') 翻译导出
    br
    select.selectpicker(id="speechSpdId")
        each name,key in speechSpdSelect
            option(value="#{name}") #{key}
    br
    button(class='btn voiceButton') 朗读
    button(class='btn')
    button(class='btn previousVoice') 上一句
    button(class='btn')
    button(class='btn continueVoice') 下一句
    br
    br
    div(ondblclick="pauseOrResume1()")
        font(size="6" id="contentDis" )
    br
    br
    select.selectpicker(id="myFilespd" onchange="myFileSpdChange()")
        each name,key in spdSelect
            option(value="#{name}") #{key}
    input(type="file" id="input-id" class="file")
    br
    input(type="file" id="fileId")
    a(href="javascript:void(0)" class='btn uploadFileButton') 上传文件-转储成 翻译后文件
